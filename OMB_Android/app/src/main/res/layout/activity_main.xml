<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Actividad_Main" android:background="@color/md_grey_900">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@drawable/blanco_logo"
                android:id="@+id/Logo" android:layout_margin="20dp"/>
        <TextView
                android:text="@string/bienvenido_al_menu_principal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/Bienvenida_Ttl" android:layout_margin="5dp"
                android:textAlignment="center" android:textSize="30sp" android:textColor="@color/md_white_1000"
                android:fontFamily="sans-serif-light"/>

        <com.airbnb.lottie.LottieAnimationView

                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_fileName="72-favourite-app-icon.json"
                android:id="@+id/Animacion_Mundo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_gravity="center" android:layout_margin="20dp"/>

    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">


        <com.github.clans.fab.FloatingActionMenu
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:menu_colorNormal="@color/md_orange_900"
                app:menu_colorPressed="@color/md_orange_800">

            <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/Fl_Facebook"
                    app:fab_size="normal"
                    app:maxImageSize="32dp"
                    android:src="@drawable/icn_face_32"
                    app:fab_label="Facebook page"
                    app:fab_colorNormal="@color/md_light_blue_900"
                    app:fab_colorPressed="@color/md_light_blue_800"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/Fl_Twitter"
                    app:fab_size="normal"
                    app:maxImageSize="32dp"
                    android:src="@drawable/icn_twitter"
                    app:fab_label="Twitter"
                    app:fab_colorNormal="@color/md_light_blue_500"
                    app:fab_colorPressed="@color/md_light_blue_300"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </com.github.clans.fab.FloatingActionMenu>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>